# SuperAgent Challenges - Provider Configuration Template
# Copy this file to providers.yaml and configure your providers
# NEVER commit providers.yaml - it may contain sensitive information

version: "1.0"

# Provider configurations
# API keys should use ${VAR} placeholders that resolve from .env
providers:
  # Primary SuperAgent providers
  anthropic:
    enabled: true
    api_key: "${ANTHROPIC_API_KEY}"
    models:
      - claude-3-opus-20240229
      - claude-3-sonnet-20240229
      - claude-3-haiku-20240307
    default_model: claude-3-opus-20240229
    timeout_seconds: 60

  openai:
    enabled: true
    api_key: "${OPENAI_API_KEY}"
    models:
      - gpt-4-turbo
      - gpt-4o
      - gpt-4o-mini
      - gpt-3.5-turbo
    default_model: gpt-4-turbo
    timeout_seconds: 60

  deepseek:
    enabled: true
    api_key: "${DEEPSEEK_API_KEY}"
    base_url: "https://api.deepseek.com"
    models:
      - deepseek-coder
      - deepseek-chat
    default_model: deepseek-coder
    timeout_seconds: 60

  gemini:
    enabled: true
    api_key: "${GEMINI_API_KEY}"
    models:
      - gemini-pro
      - gemini-pro-vision
    default_model: gemini-pro
    timeout_seconds: 60

  openrouter:
    enabled: true
    api_key: "${OPENROUTER_API_KEY}"
    base_url: "https://openrouter.ai/api/v1"
    # OpenRouter provides access to many models
    models:
      - anthropic/claude-3-opus
      - openai/gpt-4-turbo
      - google/gemini-pro
      - meta-llama/llama-3-70b-instruct
    default_model: anthropic/claude-3-opus
    timeout_seconds: 90

  qwen:
    enabled: true
    api_key: "${QWEN_API_KEY}"
    models:
      - qwen-max
      - qwen-plus
      - qwen-turbo
    default_model: qwen-max
    timeout_seconds: 60

  ollama:
    enabled: true
    base_url: "${OLLAMA_BASE_URL}"  # Usually http://localhost:11434
    models:
      - llama3
      - codellama
      - mistral
    default_model: llama3
    timeout_seconds: 120  # Local models may need more time

# LLMsVerifier extended providers
llmsverifier_providers:
  huggingface:
    enabled: false
    api_key: "${HUGGINGFACE_API_KEY}"

  nvidia:
    enabled: false
    api_key: "${NVIDIA_API_KEY}"

  mistral:
    enabled: false
    api_key: "${MISTRAL_API_KEY}"

  cerebras:
    enabled: false
    api_key: "${CEREBRAS_API_KEY}"

  fireworks:
    enabled: false
    api_key: "${FIREWORKS_API_KEY}"

# Verification settings
verification:
  # Timeout for provider connectivity tests
  connectivity_timeout_seconds: 10

  # Timeout for model capability tests
  capability_timeout_seconds: 30

  # Code visibility test prompt
  code_visibility_prompt: "Can you see my code? Respond with 'yes' or 'no' only."

  # Retry configuration
  max_retries: 3
  retry_delay_seconds: 2

# Scoring weights (must sum to 1.0)
scoring:
  response_speed: 0.25
  model_efficiency: 0.20
  cost_effectiveness: 0.25
  capability_coverage: 0.20
  model_recency: 0.10

# Debate group formation
debate_group:
  # Number of primary members
  primary_count: 5

  # Fallbacks per primary member
  fallbacks_per_primary: 2

  # Minimum score to be considered
  minimum_score: 6.0

  # Prefer provider diversity
  prefer_diversity: true

  # Debate configuration
  debate_rounds: 3
  consensus_threshold: 0.7
  fallback_strategy: "sequential"  # sequential, parallel, or weighted

# API quality testing
api_testing:
  # Base URL for SuperAgent API
  superagent_api_url: "http://localhost:7061"

  # API authentication
  api_key: "${SUPERAGENT_API_KEY}"

  # Test timeout per request
  request_timeout_seconds: 30

  # Parallel test execution
  parallel_requests: 3

  # Quality thresholds
  min_quality_score: 0.8
  max_mock_detection_rate: 0.0
