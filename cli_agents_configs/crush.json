{
  "version": "1.0",
  "provider": {
    "name": "helixagent",
    "base_url": "http://localhost:7061/v1",
    "api_key": "<YOUR_HELIXAGENT_API_KEY>"
  },
  "models": [
    {
      "id": "helixagent-debate",
      "name": "HelixAgent AI Debate Ensemble",
      "max_tokens": 128000,
      "capabilities": [
        "vision",
        "streaming",
        "function_calls",
        "embeddings",
        "mcp",
        "acp",
        "lsp",
        "code_execution"
      ]
    }
  ],
  "mcp": {
    "cloudflare-docs": {
      "type": "remote",
      "url": "https://docs.mcp.cloudflare.com/sse"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "deepwiki": {
      "type": "remote",
      "url": "https://mcp.deepwiki.com/mcp"
    },
    "everything": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-everything"
      ]
    },
    "filesystem": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ]
    },
    "helixagent-acp": {
      "type": "remote",
      "url": "http://localhost:7061/v1/acp"
    },
    "helixagent-cognee": {
      "type": "remote",
      "url": "http://localhost:7061/v1/cognee"
    },
    "helixagent-embeddings": {
      "type": "remote",
      "url": "http://localhost:7061/v1/embeddings"
    },
    "helixagent-formatters": {
      "type": "remote",
      "url": "http://localhost:7061/v1/formatters"
    },
    "helixagent-lsp": {
      "type": "remote",
      "url": "http://localhost:7061/v1/lsp"
    },
    "helixagent-mcp": {
      "type": "remote",
      "url": "http://localhost:7061/v1/mcp"
    },
    "helixagent-monitoring": {
      "type": "remote",
      "url": "http://localhost:7061/v1/monitoring"
    },
    "helixagent-rag": {
      "type": "remote",
      "url": "http://localhost:7061/v1/rag"
    },
    "helixagent-vision": {
      "type": "remote",
      "url": "http://localhost:7061/v1/vision"
    },
    "memory": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "puppeteer": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ]
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "sqlite": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-server-sqlite-npx"
      ]
    }
  },
  "plugins": [
    "helixagent-mcp",
    "helixagent-lsp",
    "helixagent-acp",
    "helixagent-embeddings",
    "helixagent-vision",
    "helixagent-rag",
    "helixagent-formatters",
    "helixagent-debate",
    "helixagent-memory",
    "helixagent-monitoring"
  ],
  "agents": {
    "coder": {
      "model": "helixagent-debate",
      "system": "You are an expert software developer. Write clean, efficient, and well-documented code.",
      "max_tokens": 16384
    },
    "default": {
      "model": "helixagent-debate",
      "system": "You are a helpful AI coding assistant powered by HelixAgent AI Debate Ensemble.",
      "max_tokens": 8192
    },
    "reviewer": {
      "model": "helixagent-debate",
      "system": "You are a code reviewer. Analyze code for bugs, security issues, and best practices.",
      "max_tokens": 8192
    }
  },
  "settings": {
    "theme": "auto",
    "stream_responses": true,
    "show_progress": true,
    "confirm_commands": true
  },
  "extensions": {
    "plugins": [
      "helixagent-mcp",
      "helixagent-lsp",
      "helixagent-acp",
      "helixagent-embeddings",
      "helixagent-vision",
      "helixagent-rag",
      "helixagent-formatters",
      "helixagent-debate",
      "helixagent-memory",
      "helixagent-monitoring"
    ],
    "lsp": {
      "enabled": true,
      "endpoint": "http://localhost:7061/v1/lsp"
    },
    "acp": {
      "enabled": true,
      "endpoint": "http://localhost:7061/v1/acp"
    },
    "embeddings": {
      "enabled": true,
      "endpoint": "http://localhost:7061/v1/embeddings",
      "model": "helixagent-debate"
    },
    "rag": {
      "enabled": true,
      "endpoint": "http://localhost:7061/v1/rag",
      "vector_store": "chromadb"
    },
    "skills": [
      {
        "name": "code-review",
        "description": "AI-powered code review with multi-LLM debate",
        "endpoint": "http://localhost:7061/v1/debate",
        "enabled": true
      },
      {
        "name": "code-format",
        "description": "Format code using 32+ formatters",
        "endpoint": "http://localhost:7061/v1/format",
        "enabled": true
      },
      {
        "name": "semantic-search",
        "description": "Semantic code search using embeddings",
        "endpoint": "http://localhost:7061/v1/embeddings",
        "enabled": true
      },
      {
        "name": "vision-analysis",
        "description": "Analyze images and screenshots",
        "endpoint": "http://localhost:7061/v1/vision",
        "enabled": true
      },
      {
        "name": "memory-recall",
        "description": "Persistent memory across sessions",
        "endpoint": "http://localhost:7061/v1/cognee",
        "enabled": true
      },
      {
        "name": "rag-retrieval",
        "description": "Retrieve context from knowledge base",
        "endpoint": "http://localhost:7061/v1/rag",
        "enabled": true
      },
      {
        "name": "lsp-diagnostics",
        "description": "Language server diagnostics and completions",
        "endpoint": "http://localhost:7061/v1/lsp",
        "enabled": true
      },
      {
        "name": "agent-communication",
        "description": "Inter-agent communication via ACP",
        "endpoint": "http://localhost:7061/v1/acp",
        "enabled": true
      }
    ]
  },
  "formatters": {
    "enabled": true,
    "auto_format": true,
    "format_on_debate": true,
    "default_line_length": 88,
    "default_indent_size": 4,
    "use_tabs": false,
    "preferences": {
      "bash": "shfmt",
      "c": "clang-format",
      "clojure": "cljfmt",
      "cpp": "clang-format",
      "css": "prettier",
      "go": "gofmt",
      "groovy": "npm-groovy-lint",
      "html": "prettier",
      "java": "google-java-format",
      "javascript": "biome",
      "json": "prettier",
      "kotlin": "ktlint",
      "lua": "stylua",
      "markdown": "prettier",
      "perl": "perltidy",
      "php": "php-cs-fixer",
      "powershell": "psscriptanalyzer",
      "python": "ruff",
      "r": "air",
      "ruby": "rubocop",
      "rust": "rustfmt",
      "scala": "scalafmt",
      "shell": "shfmt",
      "sql": "sqlfluff",
      "swift": "swift-format",
      "toml": "taplo",
      "typescript": "biome",
      "yaml": "yamlfmt"
    },
    "fallback": {
      "java": [
        "spotless"
      ],
      "javascript": [
        "prettier",
        "dprint"
      ],
      "kotlin": [
        "ktfmt",
        "spotless"
      ],
      "php": [
        "laravel-pint"
      ],
      "python": [
        "black",
        "autopep8",
        "yapf"
      ],
      "r": [
        "styler"
      ],
      "ruby": [
        "standardrb"
      ],
      "typescript": [
        "prettier",
        "dprint"
      ]
    },
    "overrides": {
      "*.js": {
        "formatter": "prettier"
      },
      "src/**/*.py": {
        "formatter": "black",
        "line_length": 120
      },
      "tests/**/*.py": {
        "formatter": "black",
        "line_length": 100
      }
    },
    "service_url": "http://localhost:7061/v1/format",
    "timeout": 30
  }
}
