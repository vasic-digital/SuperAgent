{
  "version": "1.0",
  "provider": {
    "type": "openai-compatible",
    "baseUrl": "http://localhost:7061/v1",
    "apiKeyEnv": "HELIXAGENT_API_KEY"
  },
  "models": [
    {
      "id": "helixagent-debate",
      "name": "HelixAgent AI Debate Ensemble",
      "maxInputTokens": 128000,
      "maxOutputTokens": 16384,
      "capabilities": {
        "streaming": true,
        "vision": true,
        "functionCalls": true,
        "embeddings": true
      }
    }
  ],
  "mcpServers": {
    "helixagent-acp": {
      "transport": "sse",
      "url": "http://localhost:7061/v1/acp"
    },
    "helixagent-cognee": {
      "transport": "sse",
      "url": "http://localhost:7061/v1/cognee"
    },
    "helixagent-embeddings": {
      "transport": "sse",
      "url": "http://localhost:7061/v1/embeddings"
    },
    "helixagent-lsp": {
      "transport": "sse",
      "url": "http://localhost:7061/v1/lsp"
    },
    "helixagent-mcp": {
      "transport": "sse",
      "url": "http://localhost:7061/v1/mcp"
    },
    "helixagent-vision": {
      "transport": "sse",
      "url": "http://localhost:7061/v1/vision"
    }
  },
  "agents": [
    {
      "name": "default",
      "model": "helixagent-debate",
      "prompt": "You are a helpful AI coding assistant integrated into VS Code.",
      "maxTokens": 8192
    },
    {
      "name": "completer",
      "model": "helixagent-debate",
      "prompt": "Complete the code following the cursor. Return only the completion.",
      "maxTokens": 1024
    },
    {
      "name": "explainer",
      "model": "helixagent-debate",
      "prompt": "Explain the selected code clearly and concisely.",
      "maxTokens": 4096
    }
  ],
  "settings": {
    "autoComplete": true,
    "inlineCompletion": true,
    "streamResponses": true,
    "contextWindow": 128000,
    "theme": "auto"
  },
  "formatters": {
    "enabled": true,
    "auto_format": true,
    "format_on_debate": true,
    "default_line_length": 88,
    "default_indent_size": 4,
    "use_tabs": false,
    "preferences": {
      "bash": "shfmt",
      "c": "clang-format",
      "clojure": "cljfmt",
      "cpp": "clang-format",
      "css": "prettier",
      "go": "gofmt",
      "groovy": "npm-groovy-lint",
      "html": "prettier",
      "java": "google-java-format",
      "javascript": "biome",
      "json": "prettier",
      "kotlin": "ktlint",
      "lua": "stylua",
      "markdown": "prettier",
      "perl": "perltidy",
      "php": "php-cs-fixer",
      "powershell": "psscriptanalyzer",
      "python": "ruff",
      "r": "air",
      "ruby": "rubocop",
      "rust": "rustfmt",
      "scala": "scalafmt",
      "shell": "shfmt",
      "sql": "sqlfluff",
      "swift": "swift-format",
      "toml": "taplo",
      "typescript": "biome",
      "yaml": "yamlfmt"
    },
    "fallback": {
      "java": [
        "spotless"
      ],
      "javascript": [
        "prettier",
        "dprint"
      ],
      "kotlin": [
        "ktfmt",
        "spotless"
      ],
      "php": [
        "laravel-pint"
      ],
      "python": [
        "black",
        "autopep8",
        "yapf"
      ],
      "r": [
        "styler"
      ],
      "ruby": [
        "standardrb"
      ],
      "typescript": [
        "prettier",
        "dprint"
      ]
    },
    "overrides": {
      "*.js": {
        "formatter": "prettier"
      },
      "src/**/*.py": {
        "formatter": "black",
        "line_length": 120
      },
      "tests/**/*.py": {
        "formatter": "black",
        "line_length": 100
      }
    },
    "service_url": "http://localhost:7061/v1/format",
    "timeout": 30
  }
}