{
  "interactiveLogin": false,
  "httpServer": "NettyWrapper",
  "tokenCallbacks": [
    {
      "issuerId": "helixagent",
      "tokenExpiry": 3600,
      "requestMappings": [
        {
          "requestParam": "grant_type",
          "match": "client_credentials",
          "claims": {
            "aud": ["helixagent-api"],
            "scope": "read write admin"
          }
        },
        {
          "requestParam": "grant_type",
          "match": "refresh_token",
          "claims": {
            "aud": ["helixagent-api"],
            "scope": "read write"
          }
        },
        {
          "requestParam": "grant_type",
          "match": "authorization_code",
          "claims": {
            "aud": ["helixagent-api"],
            "scope": "openid profile email"
          }
        }
      ]
    }
  ]
}
