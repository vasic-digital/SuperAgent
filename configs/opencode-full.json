{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "helixagent": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "HelixAgent",
      "options": {
        "baseURL": "http://localhost:7061/v1",
        "apiKey": "{env:HELIXAGENT_API_KEY}"
      },
      "models": {
        "helixagent-debate": {
          "name": "HelixAgent AI Debate Ensemble",
          "limit": {
            "context": 128000,
            "output": 8192
          }
        }
      }
    }
  },
  "agent": {
    "coder": {
      "model": "helixagent/helixagent-debate",
      "maxTokens": 8192
    },
    "summarizer": {
      "model": "helixagent/helixagent-debate",
      "maxTokens": 4096
    },
    "task": {
      "model": "helixagent/helixagent-debate",
      "maxTokens": 4096
    },
    "title": {
      "model": "helixagent/helixagent-debate",
      "maxTokens": 80
    }
  },
  "mcp": {
    "everything": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-everything"
      ]
    },
    "fetch": {
      "type": "local",
      "command": [
        "uvx",
        "mcp-server-fetch"
      ]
    },
    "filesystem": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/milosvasic"
      ]
    },
    "git": {
      "type": "local",
      "command": [
        "uvx",
        "mcp-server-git"
      ]
    },
    "helixagent-acp": {
      "type": "remote",
      "url": "http://localhost:7061/v1/acp"
    },
    "helixagent-cognee": {
      "type": "remote",
      "url": "http://localhost:7061/v1/cognee"
    },
    "helixagent-embeddings": {
      "type": "remote",
      "url": "http://localhost:7061/v1/embeddings"
    },
    "helixagent-lsp": {
      "type": "remote",
      "url": "http://localhost:7061/v1/lsp"
    },
    "helixagent-mcp": {
      "type": "remote",
      "url": "http://localhost:7061/v1/mcp"
    },
    "helixagent-vision": {
      "type": "remote",
      "url": "http://localhost:7061/v1/vision"
    },
    "memory": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "puppeteer": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ]
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "sqlite": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-server-sqlite-npx",
        "/tmp/helixagent.db"
      ]
    },
    "time": {
      "type": "local",
      "command": [
        "uvx",
        "mcp-server-time"
      ]
    }
  },
  "instructions": [
    "CLAUDE.md",
    "opencode.md"
  ],
  "tui": {
    "theme": "opencode"
  }
}