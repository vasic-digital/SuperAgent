    "helixagent": {
      "type": "local",
      "command": ["node", "${HELIXAGENT_HOME}/plugins/mcp-server/dist/index.js", "--endpoint", "http://localhost:7061"]
    },

    "_comment_core": "=== CORE MCP SERVERS (No API keys required) ===",

    "_comment_filesystem": "Filesystem MCP - Read/write files, list directories, search files",
    "filesystem": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-filesystem", "${HOME}", "/tmp", "/var/log"]
    },

    "_comment_memory": "Memory MCP - Persistent key-value storage for conversation context",
    "memory": {
