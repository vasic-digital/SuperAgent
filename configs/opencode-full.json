{
  "$schema": "https://opencode.ai/config.json",
  "_comment": "OpenCode Full Configuration - All Available MCP Servers for HelixAgent",
  "_version": "2.0.0",
  "_generated": "2026-01-27",
  "_description": "Comprehensive OpenCode config with HelixAgent provider and 50+ MCP servers",

  "provider": {
    "helixagent": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "HelixAgent AI Debate Ensemble",
      "options": {
        "baseURL": "http://localhost:7061/v1",
        "apiKey": "${HELIXAGENT_API_KEY:-helixagent-local}",
        "timeout": 600000
      },
      "models": {
        "helixagent-debate": {
          "name": "HelixAgent AI Debate Ensemble",
          "attachment": true,
          "reasoning": true,
          "tool_call": true,
          "limit": {
            "context": 128000,
            "output": 8192
          }
        }
      }
    }
  },

  "model": "helixagent/helixagent-debate",
  "small_model": "helixagent/helixagent-debate",

  "agent": {
    "default": {
      "model": "helixagent/helixagent-debate"
    },
    "coder": {
      "model": "helixagent/helixagent-debate",
      "maxTokens": 8192
    },
    "summarizer": {
      "model": "helixagent/helixagent-debate",
      "maxTokens": 4096
    },
    "task": {
      "model": "helixagent/helixagent-debate",
      "maxTokens": 4096
    },
    "title": {
      "model": "helixagent/helixagent-debate",
      "maxTokens": 80
    }
  },

  "mcp": {
