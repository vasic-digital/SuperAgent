{
  "version": "1.0",
  "provider": {
    "type": "openai-compatible",
    "name": "helixagent",
    "base_url": "http://localhost:7061/v1",
    "api_key_env": "HELIXAGENT_API_KEY"
  },
  "models": [
    {
      "id": "helixagent-debate",
      "name": "HelixAgent AI Debate Ensemble",
      "max_tokens": 128000,
      "capabilities": [
        "vision",
        "streaming",
        "function_calls",
        "embeddings",
        "mcp",
        "acp",
        "lsp"
      ]
    }
  ],
  "mcp": {
    "helixagent-acp": {
      "type": "remote",
      "url": "http://localhost:7061/v1/acp"
    },
    "helixagent-cognee": {
      "type": "remote",
      "url": "http://localhost:7061/v1/cognee"
    },
    "helixagent-embeddings": {
      "type": "remote",
      "url": "http://localhost:7061/v1/embeddings"
    },
    "helixagent-lsp": {
      "type": "remote",
      "url": "http://localhost:7061/v1/lsp"
    },
    "helixagent-mcp": {
      "type": "remote",
      "url": "http://localhost:7061/v1/mcp"
    },
    "helixagent-vision": {
      "type": "remote",
      "url": "http://localhost:7061/v1/vision"
    }
  },
  "settings": {
    "safety": "balanced",
    "stream": true
  },
  "formatters": {
    "enabled": true,
    "auto_format": true,
    "format_on_debate": true,
    "default_line_length": 88,
    "default_indent_size": 4,
    "use_tabs": false,
    "preferences": {
      "bash": "shfmt",
      "c": "clang-format",
      "clojure": "cljfmt",
      "cpp": "clang-format",
      "css": "prettier",
      "go": "gofmt",
      "groovy": "npm-groovy-lint",
      "html": "prettier",
      "java": "google-java-format",
      "javascript": "biome",
      "json": "prettier",
      "kotlin": "ktlint",
      "lua": "stylua",
      "markdown": "prettier",
      "perl": "perltidy",
      "php": "php-cs-fixer",
      "powershell": "psscriptanalyzer",
      "python": "ruff",
      "r": "air",
      "ruby": "rubocop",
      "rust": "rustfmt",
      "scala": "scalafmt",
      "shell": "shfmt",
      "sql": "sqlfluff",
      "swift": "swift-format",
      "toml": "taplo",
      "typescript": "biome",
      "yaml": "yamlfmt"
    },
    "fallback": {
      "java": [
        "spotless"
      ],
      "javascript": [
        "prettier",
        "dprint"
      ],
      "kotlin": [
        "ktfmt",
        "spotless"
      ],
      "php": [
        "laravel-pint"
      ],
      "python": [
        "black",
        "autopep8",
        "yapf"
      ],
      "r": [
        "styler"
      ],
      "ruby": [
        "standardrb"
      ],
      "typescript": [
        "prettier",
        "dprint"
      ]
    },
    "overrides": {
      "*.js": {
        "formatter": "prettier"
      },
      "src/**/*.py": {
        "formatter": "black",
        "line_length": 120
      },
      "tests/**/*.py": {
        "formatter": "black",
        "line_length": 100
      }
    },
    "service_url": "http://localhost:7061/v1/format",
    "timeout": 30
  }
}