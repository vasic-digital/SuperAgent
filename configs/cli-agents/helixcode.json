{
  "version": "1.0",
  "provider": {
    "type": "helixagent",
    "base_url": "http://localhost:7061/v1",
    "api_key_env": "HELIXAGENT_API_KEY",
    "options": {
      "timeout": 120,
      "max_retries": 3,
      "enable_sse": true
    }
  },
  "models": [
    {
      "id": "helixagent-debate",
      "name": "HelixAgent AI Debate Ensemble",
      "max_tokens": 128000,
      "capabilities": {
        "vision": true,
        "streaming": true,
        "function_calls": true,
        "embeddings": true,
        "code_execution": true,
        "file_operations": true,
        "web_search": true
      },
      "protocols": [
        "mcp",
        "acp",
        "lsp"
      ]
    }
  ],
  "mcp": {
    "helixagent-acp": {
      "type": "remote",
      "url": "http://localhost:7061/v1/acp",
      "enabled": true
    },
    "helixagent-cognee": {
      "type": "remote",
      "url": "http://localhost:7061/v1/cognee",
      "enabled": true
    },
    "helixagent-embeddings": {
      "type": "remote",
      "url": "http://localhost:7061/v1/embeddings",
      "enabled": true
    },
    "helixagent-lsp": {
      "type": "remote",
      "url": "http://localhost:7061/v1/lsp",
      "enabled": true
    },
    "helixagent-mcp": {
      "type": "remote",
      "url": "http://localhost:7061/v1/mcp",
      "enabled": true
    },
    "helixagent-vision": {
      "type": "remote",
      "url": "http://localhost:7061/v1/vision",
      "enabled": true
    }
  },
  "agents": {
    "architect": {
      "model": "helixagent-debate",
      "system_prompt": "You are a software architect. Design scalable, maintainable systems. Consider trade-offs and provide clear architectural decisions.",
      "max_tokens": 16384,
      "temperature": 0.6,
      "tools": [
        "filesystem",
        "search",
        "browser"
      ]
    },
    "coder": {
      "model": "helixagent-debate",
      "system_prompt": "You are an expert software developer. Write clean, efficient, well-tested code. Follow best practices and design patterns.",
      "max_tokens": 16384,
      "temperature": 0.3,
      "tools": [
        "filesystem",
        "terminal",
        "git",
        "lsp"
      ]
    },
    "default": {
      "model": "helixagent-debate",
      "system_prompt": "You are HelixCode, an AI coding assistant powered by the HelixAgent AI Debate Ensemble. You have access to all HelixAgent capabilities including MCP, ACP, LSP protocols.",
      "max_tokens": 8192,
      "temperature": 0.7,
      "tools": [
        "filesystem",
        "terminal",
        "mcp",
        "lsp",
        "embeddings",
        "vision"
      ]
    },
    "reviewer": {
      "model": "helixagent-debate",
      "system_prompt": "You are a senior code reviewer. Analyze code for bugs, security vulnerabilities, performance issues, and adherence to best practices.",
      "max_tokens": 8192,
      "temperature": 0.5,
      "tools": [
        "filesystem",
        "search",
        "lsp"
      ]
    }
  },
  "tools": {
    "filesystem": true,
    "terminal": true,
    "browser": true,
    "search": true,
    "git": true,
    "mcp": true,
    "lsp": true,
    "embeddings": true,
    "vision": true
  },
  "permissions": {
    "allow_read": true,
    "allow_write": true,
    "allow_exec": true,
    "allow_network": true
  },
  "settings": {
    "theme": "auto",
    "auto_save": true,
    "stream_responses": true,
    "show_progress": true,
    "confirm_actions": true,
    "log_level": "info"
  },
  "formatters": {
    "enabled": true,
    "auto_format": true,
    "format_on_debate": true,
    "default_line_length": 88,
    "default_indent_size": 4,
    "use_tabs": false,
    "preferences": {
      "bash": "shfmt",
      "c": "clang-format",
      "clojure": "cljfmt",
      "cpp": "clang-format",
      "css": "prettier",
      "go": "gofmt",
      "groovy": "npm-groovy-lint",
      "html": "prettier",
      "java": "google-java-format",
      "javascript": "biome",
      "json": "prettier",
      "kotlin": "ktlint",
      "lua": "stylua",
      "markdown": "prettier",
      "perl": "perltidy",
      "php": "php-cs-fixer",
      "powershell": "psscriptanalyzer",
      "python": "ruff",
      "r": "air",
      "ruby": "rubocop",
      "rust": "rustfmt",
      "scala": "scalafmt",
      "shell": "shfmt",
      "sql": "sqlfluff",
      "swift": "swift-format",
      "toml": "taplo",
      "typescript": "biome",
      "yaml": "yamlfmt"
    },
    "fallback": {
      "java": [
        "spotless"
      ],
      "javascript": [
        "prettier",
        "dprint"
      ],
      "kotlin": [
        "ktfmt",
        "spotless"
      ],
      "php": [
        "laravel-pint"
      ],
      "python": [
        "black",
        "autopep8",
        "yapf"
      ],
      "r": [
        "styler"
      ],
      "ruby": [
        "standardrb"
      ],
      "typescript": [
        "prettier",
        "dprint"
      ]
    },
    "overrides": {
      "*.js": {
        "formatter": "prettier"
      },
      "src/**/*.py": {
        "formatter": "black",
        "line_length": 120
      },
      "tests/**/*.py": {
        "formatter": "black",
        "line_length": 100
      }
    },
    "service_url": "http://localhost:7061/v1/format",
    "timeout": 30
  }
}