{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "helixagent": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "HelixAgent",
      "options": {
        "baseURL": "http://localhost:7061/v1",
        "apiKey": "{env:HELIXAGENT_API_KEY}"
      },
      "models": {
        "helixagent-debate": {
          "name": "HelixAgent AI Debate Ensemble",
          "limit": {
            "context": 128000,
            "output": 8192
          }
        }
      }
    }
  },
  "agent": {
    "coder": {
      "model": "helixagent/helixagent-debate",
      "maxTokens": 8192
    },
    "summarizer": {
      "model": "helixagent/helixagent-debate",
      "maxTokens": 4096
    },
    "task": {
      "model": "helixagent/helixagent-debate",
      "maxTokens": 4096
    },
    "title": {
      "model": "helixagent/helixagent-debate",
      "maxTokens": 80
    }
  },
