{
  "$schema": "https://schema.opencode.ai/config/v1.json",
  "mcpServers": {
    "helixagent": {
      "type": "sse",
      "url": "http://localhost:7061/v1/mcp",
      "headers": {
        "Accept": "application/toon+json",
        "Accept-Encoding": "br, gzip",
        "X-HelixAgent-Protocol": "mcp/1.0"
      },
      "reconnectInterval": 5000,
      "maxReconnectAttempts": 10
    }
  },
  "providers": {
    "helixagent": {
      "provider": "openai",
      "openAiBaseUrl": "http://localhost:7061/v1",
      "openAiModelId": "helix-debate-ensemble",
      "headers": {
        "Accept": "application/toon+json",
        "Accept-Encoding": "br, gzip"
      }
    }
  },
  "extensions": {
    "helixagent": {
      "enabled": true,
      "endpoint": "http://localhost:7061",
      "preferHTTP3": true,
      "enableTOON": true,
      "enableBrotli": true,
      "debate": {
        "renderStyle": "theater",
        "showPhaseIndicators": true,
        "showConfidenceScores": true
      },
      "events": {
        "subscribeToDebates": true,
        "subscribeToTasks": true,
        "transport": "sse"
      },
      "progress": {
        "style": "unicode",
        "showResources": true
      }
    }
  }
}
