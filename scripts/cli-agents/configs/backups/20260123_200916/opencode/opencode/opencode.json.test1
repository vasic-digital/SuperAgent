{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "helixagent": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:7061/v1",
        "apiKey": "helixagent-local"
      },
      "models": {
        "helixagent-debate": {
          "name": "HelixAgent Debate Ensemble",
          "attachment": true,
          "reasoning": true,
          "tool_call": true,
          "limit": {
            "context": 128000,
            "output": 8192
          }
        }
      }
    }
  },
  "agent": {
    "model": "helixagent/helixagent-debate"
  }
}
