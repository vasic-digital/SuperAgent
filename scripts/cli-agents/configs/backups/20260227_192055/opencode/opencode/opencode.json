{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "helixagent": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "HelixAgent",
      "options": {
        "baseURL": "http://localhost:7061/v1",
        "apiKey": "sk-bd15ed2af3d6cd8c0bdf57e221bbf7771fa06bda93cc8866807cc85211f58d1a"
      },
      "models": {
        "helixagent-debate": {
          "name": "HelixAgent AI Debate Ensemble",
          "limit": {
            "context": 128000,
            "output": 8192
          }
        }
      }
    }
  },
  "agent": {
    "coder": {
      "model": "helixagent/helixagent-debate",
      "maxTokens": 8192
    },
    "summarizer": {
      "model": "helixagent/helixagent-debate",
      "maxTokens": 4096
    },
    "task": {
      "model": "helixagent/helixagent-debate",
      "maxTokens": 4096
    },
    "title": {
      "model": "helixagent/helixagent-debate",
      "maxTokens": 80
    }
  },
  "mcp": {
    "cloudflare-docs": {
      "type": "remote",
      "url": "https://docs.mcp.cloudflare.com/sse"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "deepwiki": {
      "type": "remote",
      "url": "https://mcp.deepwiki.com/mcp"
    },
    "everything": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-everything"
      ]
    },
    "fetch": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-fetch-server"
      ]
    },
    "filesystem": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/milosvasic"
      ]
    },
    "git": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-git"
      ]
    },
    "helixagent-acp": {
      "type": "remote",
      "url": "http://localhost:7061/v1/acp"
    },
    "helixagent-cognee": {
      "type": "remote",
      "url": "http://localhost:7061/v1/cognee"
    },
    "helixagent-embeddings": {
      "type": "remote",
      "url": "http://localhost:7061/v1/embeddings"
    },
    "helixagent-formatters": {
      "type": "remote",
      "url": "http://localhost:7061/v1/formatters"
    },
    "helixagent-lsp": {
      "type": "remote",
      "url": "http://localhost:7061/v1/lsp"
    },
    "helixagent-mcp": {
      "type": "remote",
      "url": "http://localhost:7061/v1/mcp"
    },
    "helixagent-monitoring": {
      "type": "remote",
      "url": "http://localhost:7061/v1/monitoring"
    },
    "helixagent-rag": {
      "type": "remote",
      "url": "http://localhost:7061/v1/rag"
    },
    "helixagent-vision": {
      "type": "remote",
      "url": "http://localhost:7061/v1/vision"
    },
    "memory": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "puppeteer": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ]
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "sqlite": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-server-sqlite-npx",
        "/tmp/helixagent.db"
      ]
    },
    "time": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@theo.foobar/mcp-time"
      ]
    }
  },
  "instructions": [
    "CLAUDE.md",
    "opencode.md"
  ],
  "tui": {
    "theme": "opencode"
  }
}
