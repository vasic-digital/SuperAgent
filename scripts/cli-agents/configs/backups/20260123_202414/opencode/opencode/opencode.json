{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "helixagent": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:7061/v1",
        "apiKey": "helixagent-local"
      },
      "models": {
        "helixagent-debate": {
          "name": "HelixAgent AI Debate Ensemble",
          "attachment": true,
          "reasoning": true,
          "tool_call": true,
          "limit": {
            "context": 128000,
            "output": 8192
          }
        }
      }
    }
  },
  "agent": {
    "model": "helixagent/helixagent-debate",
    "system": "You are integrated with HelixAgent AI Debate system. Your responses are validated through multi-pass verification with 15 LLMs for highest accuracy."
  },
  "mcp": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-filesystem", "$HOME"],
      "env": {}
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-fetch"],
      "env": {}
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-memory"],
      "env": {}
    },
    "sqlite": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-sqlite", "--db-path", "$HOME/.helixagent/data/helixagent.db"],
      "env": {}
    },
    "puppeteer": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-puppeteer"],
      "env": {}
    }
  },
  "keybind": {
    "leader": " "
  }
}
