{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "helixagent": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "HelixAgent",
      "options": {
        "baseURL": "http://localhost:7061/v1",
        "apiKey": "standalone-mode"
      },
      "models": {
        "helixagent-debate": {
          "name": "HelixAgent AI Debate Ensemble",
          "limit": { "context": 128000, "output": 8192 }
        }
      }
    }
  },
  "model": "helixagent/helixagent-debate",
  "small_model": "helixagent/helixagent-debate",
  "agent": {
    "coder": { "model": "helixagent/helixagent-debate", "maxTokens": 8192 },
    "summarizer": { "model": "helixagent/helixagent-debate", "maxTokens": 4096 },
    "task": { "model": "helixagent/helixagent-debate", "maxTokens": 4096 },
    "title": { "model": "helixagent/helixagent-debate", "maxTokens": 80 }
  },
  "mcp": {
    "helixagent": {
      "type": "local",
      "command": ["node", "${HELIXAGENT_HOME}/plugins/mcp-server/dist/index.js", "--endpoint", "http://localhost:7061"]
    },
    "everything": {
      "type": "local",
      "command": ["${HELIXAGENT_HOME}/MCP-Servers/node_modules/.bin/mcp-server-everything"]
    },
    "filesystem": {
      "type": "local",
      "command": ["${HELIXAGENT_HOME}/MCP-Servers/node_modules/.bin/mcp-server-filesystem", "${HOME}", "/tmp"]
    },
    "memory": {
      "type": "local",
      "command": ["${HELIXAGENT_HOME}/MCP-Servers/node_modules/.bin/mcp-server-memory"]
    },
    "sequential-thinking": {
      "type": "local",
      "command": ["${HELIXAGENT_HOME}/MCP-Servers/node_modules/.bin/mcp-server-sequential-thinking"]
    },
    "fetch": {
      "type": "local",
      "command": ["mcp-server-fetch"]
    },
    "git": {
      "type": "local",
      "command": ["mcp-server-git"]
    },
    "time": {
      "type": "local",
      "command": ["mcp-server-time"]
    },
    "puppeteer": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-puppeteer"]
    },
    "sqlite": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-sqlite", "${HOME}/.helixagent/data/opencode.db"]
    },
    "postgres": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-postgres", "${DATABASE_URL}"]
    },
    "github": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-github"],
      "environment": { "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}" }
    },
    "gitlab": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-gitlab"],
      "environment": { "GITLAB_TOKEN": "${GITLAB_TOKEN}" }
    },
    "slack": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-slack"],
      "environment": { "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}" }
    },
    "notion": {
      "type": "local",
      "command": ["npx", "-y", "@notionhq/notion-mcp-server"],
      "environment": { "NOTION_API_KEY": "${NOTION_API_KEY}" }
    },
    "linear": {
      "type": "local",
      "command": ["npx", "-y", "mcp-linear"],
      "environment": { "LINEAR_API_KEY": "${LINEAR_API_KEY}" }
    },
    "brave-search": {
      "type": "local",
      "command": ["npx", "-y", "@brave/brave-search-mcp-server"],
      "environment": { "BRAVE_API_KEY": "${BRAVE_API_KEY}" }
    },
    "sentry": {
      "type": "local",
      "command": ["npx", "-y", "@sentry/mcp-server"],
      "environment": { "SENTRY_AUTH_TOKEN": "${SENTRY_AUTH_TOKEN}" }
    },
    "docker": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-docker"]
    },
    "kubernetes": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-kubernetes"]
    },
    "mongodb": {
      "type": "local",
      "command": ["npx", "-y", "mongodb-mcp-server"],
      "environment": { "MONGODB_URI": "${MONGODB_URI}" }
    },
    "redis": {
      "type": "local",
      "command": ["npx", "-y", "@hamaster/redis-mcp-server"],
      "environment": { "REDIS_URL": "${REDIS_URL}" }
    },
    "elasticsearch": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-elasticsearch"],
      "environment": { "ELASTICSEARCH_URL": "${ELASTICSEARCH_URL}" }
    },
    "qdrant": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-qdrant"],
      "environment": { "QDRANT_URL": "${QDRANT_URL}" }
    },
    "figma": {
      "type": "local",
      "command": ["npx", "-y", "figma-mcp"],
      "environment": { "FIGMA_ACCESS_TOKEN": "${FIGMA_ACCESS_TOKEN}" }
    },
    "discord": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-discord"],
      "environment": { "DISCORD_TOKEN": "${DISCORD_TOKEN}" }
    },
    "todoist": {
      "type": "local",
      "command": ["npx", "-y", "todoist-mcp"],
      "environment": { "TODOIST_API_KEY": "${TODOIST_API_KEY}" }
    },
    "jira": {
      "type": "local",
      "command": ["npx", "-y", "@rokealvo/jira-mcp"],
      "environment": { "JIRA_HOST": "${JIRA_HOST}", "JIRA_EMAIL": "${JIRA_EMAIL}", "JIRA_API_TOKEN": "${JIRA_API_TOKEN}" }
    },
    "trello": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-trello"],
      "environment": { "TRELLO_API_KEY": "${TRELLO_API_KEY}", "TRELLO_TOKEN": "${TRELLO_TOKEN}" }
    },
    "airtable": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-airtable"],
      "environment": { "AIRTABLE_API_KEY": "${AIRTABLE_API_KEY}" }
    },
    "vercel": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-vercel"],
      "environment": { "VERCEL_TOKEN": "${VERCEL_TOKEN}" }
    },
    "netlify": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-netlify"],
      "environment": { "NETLIFY_AUTH_TOKEN": "${NETLIFY_AUTH_TOKEN}" }
    },
    "heroku": {
      "type": "local",
      "command": ["npx", "-y", "@heroku/mcp-server"],
      "environment": { "HEROKU_API_KEY": "${HEROKU_API_KEY}" }
    },
    "aws-s3": {
      "type": "local",
      "command": ["npx", "-y", "aws-s3-mcp"],
      "environment": { "AWS_ACCESS_KEY_ID": "${AWS_ACCESS_KEY_ID}", "AWS_SECRET_ACCESS_KEY": "${AWS_SECRET_ACCESS_KEY}" }
    },
    "google-drive": {
      "type": "local",
      "command": ["npx", "-y", "@piotr-agier/google-drive-mcp"],
      "environment": { "GOOGLE_CREDENTIALS": "${GOOGLE_CREDENTIALS}" }
    },
    "datadog": {
      "type": "local",
      "command": ["npx", "-y", "datadog-mcp-server"],
      "environment": { "DD_API_KEY": "${DD_API_KEY}", "DD_APP_KEY": "${DD_APP_KEY}" }
    },
    "axiom": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-axiom"],
      "environment": { "AXIOM_TOKEN": "${AXIOM_TOKEN}" }
    },
    "stripe": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-stripe"],
      "environment": { "STRIPE_SECRET_KEY": "${STRIPE_SECRET_KEY}" }
    },
    "shopify": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-shopify"],
      "environment": { "SHOPIFY_ACCESS_TOKEN": "${SHOPIFY_ACCESS_TOKEN}", "SHOPIFY_STORE_URL": "${SHOPIFY_STORE_URL}" }
    },
    "openai": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-openai"],
      "environment": { "OPENAI_API_KEY": "${OPENAI_API_KEY}" }
    },
    "exa": {
      "type": "local",
      "command": ["npx", "-y", "exa-mcp-server"],
      "environment": { "EXA_API_KEY": "${EXA_API_KEY}" }
    },
    "tavily": {
      "type": "local",
      "command": ["npx", "-y", "tavily-mcp"],
      "environment": { "TAVILY_API_KEY": "${TAVILY_API_KEY}" }
    },
    "youtube": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-youtube"],
      "environment": { "YOUTUBE_API_KEY": "${YOUTUBE_API_KEY}" }
    },
    "twitter": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-twitter"],
      "environment": { "TWITTER_BEARER_TOKEN": "${TWITTER_BEARER_TOKEN}" }
    },
    "reddit": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-reddit"],
      "environment": { "REDDIT_CLIENT_ID": "${REDDIT_CLIENT_ID}", "REDDIT_CLIENT_SECRET": "${REDDIT_CLIENT_SECRET}" }
    },
    "hackernews": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-hackernews"]
    },
    "weather": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-weather"],
      "environment": { "OPENWEATHER_API_KEY": "${OPENWEATHER_API_KEY}" }
    },
    "wikipedia": {
      "type": "local",
      "command": ["npx", "-y", "wikipedia-mcp-server"]
    },
    "bitbucket": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-bitbucket"],
      "environment": { "BITBUCKET_USERNAME": "${BITBUCKET_USERNAME}", "BITBUCKET_APP_PASSWORD": "${BITBUCKET_APP_PASSWORD}" }
    },
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"]
    },
    "apify": {
      "type": "local",
      "command": ["npx", "-y", "@apify/actors-mcp-server"],
      "environment": { "APIFY_TOKEN": "${APIFY_TOKEN}" }
    },
    "mapbox": {
      "type": "local",
      "command": ["npx", "-y", "@mapbox/mcp-server"],
      "environment": { "MAPBOX_ACCESS_TOKEN": "${MAPBOX_ACCESS_TOKEN}" }
    },
    "dynatrace": {
      "type": "local",
      "command": ["npx", "-y", "@dynatrace-oss/dynatrace-mcp-server"],
      "environment": { "DYNATRACE_URL": "${DYNATRACE_URL}", "DYNATRACE_API_TOKEN": "${DYNATRACE_API_TOKEN}" }
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp"]
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp"]
    },
    "obsidian": {
      "type": "local",
      "command": ["npx", "-y", "@jianruidutong/obsidian-mcp"],
      "environment": { "OBSIDIAN_VAULT_PATH": "${OBSIDIAN_VAULT_PATH}" }
    },
    "neon": {
      "type": "local",
      "command": ["npx", "-y", "mcp-server-neon"],
      "environment": { "NEON_API_KEY": "${NEON_API_KEY}" }
    }
  },
  "instructions": ["CLAUDE.md", "opencode.md"],
  "tui": { "theme": "opencode" }
}
