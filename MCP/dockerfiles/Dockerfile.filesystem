# MCP Filesystem Server
FROM node:20-alpine

WORKDIR /app

# Copy from MCP-Servers submodule
COPY src/filesystem ./

# Install dependencies and build
RUN npm install && npm run build 2>/dev/null || true

VOLUME ["/mnt/home", "/mnt/tmp", "/mnt/workspace"]

EXPOSE 3000

CMD ["node", "dist/index.js", "/mnt/home", "/mnt/tmp", "/mnt/workspace"]
