# MCP Heroku Server - Platform management
FROM node:20-alpine

RUN apk add --no-cache curl bash

# Install Heroku CLI
RUN curl https://cli-assets.heroku.com/install.sh | sh

WORKDIR /app

COPY . .

RUN npm install && npm run build 2>/dev/null || true

ENV HEROKU_API_KEY=""

EXPOSE 3000

CMD ["node", "dist/index.js"]
